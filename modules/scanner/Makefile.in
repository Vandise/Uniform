SCANNER_DIR := modules/scanner
SCANNER_LIB_NAME := lib/uniformscanner.$(LIBEXT)

SCANNER_MAJOR_VERSION := 1
SCANNER_MINOR_VERSION := 0
SCANNER_MAINT_VERSION := 0

SCANNER_FILES        := $(wildcard $(SCANNER_DIR)/src/*.c)
SCANNER_HEADERS      := $(wildcard $(SCANNER_DIR)/inc/*.h)

SCANNER_OBJECTS      := $(patsubst $(SCANNER_DIR)/src/%.c, $(SCANNER_DIR)/obj/%.o, $(SCANNER_FILES))
SCANNER_TEST_FILES   := $(wildcard $(SCANNER_DIR)/test/*.c)
SCANNER_TEST_OBJECTS := $(patsubst $(SCANNER_DIR)/test/%.c, $(SCANNER_DIR)/obj/%.o, $(SCANNER_TEST_FILES))

ifeq ($(UNAME), Darwin)
  SHAREDFLAG   := $(SHAREDFLAG) -install_name uniformscanner.dylib -compatibility_version $(SCANNER_MAJOR_VERSION).$(SCANNER_MINOR_VERSION) -current_version $(SCANNER_MAJOR_VERSION).$(SCANNER_MINOR_VERSION).$(SCANNER_MAINT_VERSION)
  SCANNER_LIB_NAME := lib/uniformscanner.$(LIBEXT).$(SCANNER_MAJOR_VERSION).$(SCANNER_MINOR_VERSION).$(SCANNER_MAINT_VERSION)
endif

scanner: scanner_module scanner_library scanner_tests scanner_install

scanner_install:
	mkdir -p $(SYSINCDIR)/uniform/scanner
	cp $(SCANNER_HEADERS) $(SYSINCDIR)/uniform/scanner
	cp $(SCANNER_LIB_NAME) $(SYSLIBDIR)

scanner_module: $(SCANNER_OBJECTS)

$(SCANNER_OBJECTS): $(SCANNER_FILES)
	$(CC) $(CFLAGS) $(ADDFLAGS) -c $< -o $@

scanner_library:
	$(CC) $(SHAREDFLAG) $(SCANNER_OBJECTS) -o $(SCANNER_LIB_NAME)

scanner_tests: $(SCANNER_TEST_OBJECTS)
	$(CC) $(CFLAGS) $(ADDFLAGS) -o bin/scanner_tests $(SCANNER_TEST_OBJECTS) -lawry

$(SCANNER_TEST_OBJECTS): $(SCANNER_TEST_FILES)
	$(CC) $(CFLAGS) $(ADDFLAGS) -c $< -o $@
